config {
    type: "table",
    schema: constants.RESULTS_DATASET,
    description: "All mortgage related tracking",
    tags: ["all"],
}

with applications as (
  select
    *
  from
    ${ref('applications')}
  where
    product = 'Bol√•n'
)

  select
    date,
    session_id,
    type,
    event_name,
    status,
    max(event_value) as event_value,
    step,
    previous_submit_location,
    source_medium,
    count(distinct session_id) as sessions,
  from
    applications
  group by
    date,
    session_id,
    type,
    event_name,
    status,
    step,
    previous_submit_location,
    source_medium