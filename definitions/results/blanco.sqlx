config {
    type: "table",
    schema: constants.RESULTS_DATASET,
    description: "All card related tracking",
    tags: ["all"],
}

with applications as (
  select
    *
  from
    ${ref('applications')}
  where
    product = 'Privatl√•n'
)

  select
    date,
    session_id,
    type,
    event_name,
    status,
    step,
    previous_submit_location,
    source_medium,
    exp_name_cookie_value,
    co_applicant,
    case
      when regexp_contains(step, 'Start') then '1'
      when regexp_contains(step, '1') then '2'
      when regexp_contains(step, '2') then '3'
      when regexp_contains(step, '3') then '4'
      when regexp_contains(step, '4') then '5'
      when regexp_contains(step, '5') then '6'
      when regexp_contains(step, 'Submit') then '7'
      when regexp_contains(step, 'Sign') then '8'
  else '99' end as sort,
    count(distinct session_id) as sessions,
  from
    applications
  group by
    date,
    session_id,
    type,
    event_name,
    status,
    step,
    previous_submit_location,
    source_medium,
    exp_name_cookie_value,
    co_applicant